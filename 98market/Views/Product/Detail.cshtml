            $("#submitform").submit(function (e) {
                e.preventDefault;
                var form = $(this);
                var url = form.attr('action');

                $.ajax({
                    type: 'post',
                    url: url,
                    data: form.serialize,
                    success: function (res) {
                        if (res > 0) {
