<title>پنل مدیریت  | افزودن برند</title>
@model brand

@{
    ViewData["Title"] = "افزودن برند";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="AddBrand" method="post" style="margin-top:5%;" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="brandname" for="emailAddress"></label>
                <input asp-for="brandname" type="text" parsley-trigger="change" class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="brandname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>تصویر برند</label>
                <input type="file" name="file" class="form-control" />
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/brand/showAllBrand" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>


