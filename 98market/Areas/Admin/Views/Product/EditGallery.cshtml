<title>پنل مدیریت  | ویراایش تصاویر محصول</title>
@model ProductGallery

@{
    ViewData["Title"] = "ویرایش گالری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="EditGallery" method="post" style="margin-top:5%;" enctype="multipart/form-data">
            <input type="hidden" asp-for="galleryid" />
            <input type="hidden" asp-for="productid" />
            <input type="hidden" asp-for="imagename" />
            <div class="form-group">
                <input type="file" name="file" class="form-control" />
                <label>انتخاب تصویر</label>
                <img src="~/CssSite/ImageSite/page-single-product/product-img/@Model.imagename" width="140" height="130" class="img-thumbnail" />
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/product/galleries/@Model.productid" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

