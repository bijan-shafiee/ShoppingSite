<title>پنل مدیریت  | افزودن گالری</title>
@model ProductGallery

@{
    ViewData["Title"] = "افزودن گالری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int productId = Convert.ToInt32(ViewBag.productId);
}



<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="AddGallery" method="post" style="margin-top:5%;" enctype="multipart/form-data">
            <input type="hidden" asp-for="productid" value="@productId" />
            <div class="form-group">
                <input type="file" name="file" class="form-control" />
                <label>انتخاب تصویر</label>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/product/galleries/@productId" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

