<title>پنل مدیریت  |  دسترسی  کاربران</title>
@model IEnumerable<_98market.DataLayer.Entities.Role.permission>
@{
    ViewData["Title"] = "ویرایش دسترسی ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int userId = Convert.ToInt16(ViewBag.UserId);
    List<_98market.DataLayer.Entities.Role.permission> permissions = ViewBag.Permissions as List<_98market.DataLayer.Entities.Role.permission>;
}


<div class="col-lg-12">
    <div class="card-box">
        <form asp-action="Permission" method="post" style="padding-top:6%;" enctype="multipart/form-data">
            <input type="hidden" name="userId" value="@userId" />

            @foreach (var item in permissions)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <input name="roleIds" id="remember-1" type="checkbox" @(Model.Contains(item) ? "checked" : "") value="@item.permissionid" data-parsley-multiple="remember-1" data-parsley-id="13">
                        <label for="remember-1">@item.permissionTitle</label>
                    </div>
                </div>
            }

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/user/roles" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

