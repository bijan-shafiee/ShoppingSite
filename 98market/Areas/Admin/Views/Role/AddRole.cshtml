

@model _98market.DataLayer.Entities.Role.role

@{
    ViewData["Title"] = "افزودن نقش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="AddRole" method="post" style="margin-top:5%;" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="roltitle" for="emailAddress">عنوان نقش</label>
                <input asp-for="roltitle" type="text" parsley-trigger="change" class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="roltitle" class="text-danger"></span>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a href="/admin/role" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

